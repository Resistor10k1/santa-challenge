{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "main_index",
            "command": "pandoc docs/main_index.md -f markdown -t html -s -o docs/index.html --mathml --metadata title=\"Wiki Santa-Challenge\"",
            "options":{
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "type": "shell",
            "label": "doxygen",
            "command": "doxygen doxygen/doxygenConfig",
            "options":{
                "cwd": "${workspaceFolder}/docs"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },

// Launch configuration for the unit-tests ===============================================
        {
            "type": "cmake",
            "label": "cmakeBuildTest",
            "command": "build",
            "targets": [
                "testcppTemplate"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "CMake build unit-tests"
        },
        {
            "label": "launchTests",
            "dependsOrder": "sequence",
            "dependsOn": [
                "cmakeBuildTest"
            ]
        },

// Launch configuration for the application ===============================================
        {
            "type": "cmake",
            "label": "cmakeBuild",
            "command": "build",
            "targets": [
                "cppTemplate"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "CMake build application"
        },
        {
            "label": "launchApp",
            "dependsOrder": "sequence",
            "dependsOn": [
                "cmakeBuild"
            ]
        }
    ]
}